{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "no-useless-escape": "off",
        "no-unused-vars": [
            "error", {
                "vars": "local"
            }
        ],
        "eol-last": [
            "error",
            "always"
        ]
    },
    "globals": {
        "mdc": true,
        "chrome": true,
        "Vue": true,
        "Account": true,
        "firebase": true,
        "_": true
    }
}